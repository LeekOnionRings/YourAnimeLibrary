<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.widget.Button
        android:id="@+id/viewAnimesButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/custom_button3"
        android:fontFamily="monospace"
        android:text="See Animes"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/usernameTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/editUserButton"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/pencil_icon"
        app:layout_constraintStart_toEndOf="@+id/viewAnimesButton"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/deleteUserButton"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/trash_can_icon"
        app:layout_constraintStart_toEndOf="@+id/editUserButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"

        android:text="Username"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>